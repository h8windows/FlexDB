<%= form_for [:admin, @user] do |f| %>
	<% if @post.errors.any? %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.check_box :admin %>
		<%= f.label :admin, "Is an admin?" %>
	</p>
	<%= f.submit %>
