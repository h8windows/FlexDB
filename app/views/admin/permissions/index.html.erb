<h2>Permissions for <%= @user.email %></h2>
<%= form_tag update_user_permissions_path , :method => :put do %>
	<table>
		<thead>
			<th>Market</th>
			<% permissions.each do |name, text| %>
				<th><%= text %></th>
			<% end %>
		</thead>
		<tbody>
			<% @markets.each do |market| %>
			<tr>
				<td>
					<%= market.name %>
				</td>
				<% permissions.each do |name, text| %>
				<td>
					<%= check_box_tag "permissions[#{market.id}][#{name}]", @ability.can?(name.to_sym, market) %>
				</td>
				<% end %>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= submit_tag "Update" %>
<% end %>