<%= form_for [@market, @feature], :html => { :multipart => true } do |f| %>
	<% if @feature.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@feature.errors.count, "error") %> prohibited this feature from being saved:</h2>

		<ul>
		<% @feature.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :remoteId %>
		<%= f.text_field :remoteId %>
	</div>
	<div class="field">
		<%= f.label :remoteMarketId %>
		<%= f.text_field :remoteMarketId %>
	</div>
	<div class="field">
		<%= f.label :content %>
		<%= f.text_area :content %>
	</div>
	<div class="field">
		<% number = 0 %>
		<%= f.fields_for :assets do |asset| %>
		<p>
			<%= asset.label :asset, "File ##{number += 1}" %>
			<%= asset.file_field :asset %>
		</p>
		<% end %>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
